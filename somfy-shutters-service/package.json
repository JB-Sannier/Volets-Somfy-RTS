{
  "name": "somfy-proxy-service",
  "version": "1.0.0",
  "description": "Internal Authentication Service",
  "license": "ISC",
  "author": "",
  "main": "main.js",
  "scripts": {
    "build": "tsc && cp package*.json .env build/ && cd build && npm install --omit=dev",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "bundle": "webpack --mode development",
    "start": "ts-node-dev ./src/index.ts",
    "startBundle": "ts-node-dev ./bundle/somfy-shutters-service.js",
    "test": "jest",
    "webpack": "webpack --mode development",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "typeorm:run-migrations": "npm run typeorm migration:run -- -d ./src/typeorm.config.ts",
    "typeorm:generate-migration": "npm run typeorm -- -d ./src/typeorm.config.ts migration:generate ./src/migrations/$npm_config_name",
    "typeorm:create-migration": "npm run typeorm -- -d ./src/typeorm.config.ts migration:create ./src/migrations/$npm_config_name",
    "typeorm:revert-migration": "npm run typeorm -- -d ./src/typeorm.config.ts migration:revert"
  },
  "dependencies": {
    "@inversifyjs/binding-decorators": "^1.1.5",
    "@inversifyjs/http-core": "^4.8.0",
    "@inversifyjs/http-express": "^4.8.0",
    "body-parser": "^2.2.1",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "inversify": "^7.10.6",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.16.3",
    "save": "^2.9.0",
    "typeorm": "^0.3.28",
    "uuid": "^11.1.0",
    "yup": "^1.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.0",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "@types/webpack-env": "^1.18.8",
    "@types/webpack-node-externals": "^3.0.4",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  }
}
