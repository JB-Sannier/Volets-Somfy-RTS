{
  "name": "somfy-proxy-service",
  "version": "1.0.0",
  "description": "Internal Authentication Service",
  "license": "ISC",
  "author": "",
  "main": "main.js",
  "scripts": {
    "start": "ts-node-dev ./src/index.ts",
    "test": "jest",
    "build": "tsc && cp package*.json build/ && cd build && npm install --omit=dev",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "typeorm:run-migrations": "npm run typeorm migration:run -- -d ./src/typeorm.config.ts",
    "typeorm:generate-migration": "npm run typeorm -- -d ./src/typeorm.config.ts migration:generate ./src/migrations/$npm_config_name",
    "typeorm:create-migration": "npm run typeorm -- -d ./src/typeorm.config.ts migration:create ./src/migrations/$npm_config_name",
    "typeorm:revert-migration": "npm run typeorm -- -d ./src/typeorm.config.ts migration:revert"
  },
  "dependencies": {
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.1.0",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "dotenv": "^17.2.0",
    "express": "^4.21.2",
    "inversify": "^6.2.2",
    "inversify-binding-decorators": "^4.0.0",
    "inversify-express-utils": "^6.5.0",
    "jsonwebtoken": "^9.0.2",
    "password-generator": "^2.3.2",
    "pg": "^8.16.3",
    "save": "^2.9.0",
    "typeorm": "^0.3.25",
    "uuid": "^11.1.0",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.3",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  }
}
